 <div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Ready to Apply? </h3>
                    <p>This form will create your account and submit an application.</p>
                    <%= form_with(model: @student) do |form| %>
                    <div class="col-md-12">
                        <%= form.label :username, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :username, class: "form-control" %>
                      </div>
                      <div class="col-md-12">
                        <%= form.label :email, class: "col-sm-2 col-form-label" %>
                        <%= form.email_field :email, class: "form-control" %>
                      </div>
                     
                      <div class="col-md-12">
                        <%= form.label :password, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :password, class: "form-control" %>
                      </div>
                    <div class="col-md-12">
                      <%= form.label :name, class: "col-sm-2 col-form-label" %>
                      <%= form.text_field :name, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                      <%= form.label :age, class: "col-sm-2 col-form-label" %>
                      <%= form.text_field :age, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= form.label :act_score, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :act_score, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= form.label :gpa, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :gpa, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= form.label :extra_curricular, class: "col-sm-2 col-form-label" %>
                        <%= form.text_area :extra_curricular, rows: 10, class: "form-control" %>
                    </div>
                        <%= form.submit  class: "btn btn-primary" %>
                    <div>
                    <% end %>  
                      <%= link_to "Student Roster" , students_path, class: "btn btn-primary" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>