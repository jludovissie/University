 <div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Ready to Apply? </h3>
                    <% if @student.errors.any? %>
                      <% @student.errors.full_messages.each do |message| %>
                    <p><%= message  %></p>
                      <% end %>
                    <% end %>  

                    <p>This form will create your account and submit an application.</p>
                    <%= form_with(model: @student) do |form| %>
                    <div class="col-md-12">
                        <%= form.label :username, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :username, class: "form-control" %>
                      </div>
                      <div class="col-md-12">
                        <%= form.label :email, class: "col-sm-2 col-form-label" %>
                        <%= form.email_field :email, class: "form-control" %>
                      </div>
                     
                      <div class="col-md-12">
                        <%= form.label :password, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :password, class: "form-control" %>
                      </div>
                    <div class="col-md-12">
                      <%= form.label :name, class: "col-sm-2 col-form-label" %>
                      <%= form.text_field :name, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                      <%= form.label :age, class: "col-sm-2 col-form-label" %>
                      <%= form.text_field :age, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= form.label :act_score, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :act_score, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= form.label :gpa, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :gpa, class: "form-control" %>
                    </div> 
                    <div class="col-md-12">
                        <%= form.label :degree_id, class: "col-sm-2 col-form-label" %>
                        <%= form.collection_select(:degree_id, Degree.all, :id, :major)%>
                    </div>
                    <div class="col-md-12">
                        <%= form.submit  class: "btn btn-primary mt-4" %>                  
                      <% end %>  
                        <%= link_to "Login", login_path, class: "btn btn-primary mt-4" %>
                </div>                  
              </div>
            </div>
        </div>
    </div>
</div>
