<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Update Your Login Credentials! </h3>
                    <% if @student.errors.any? %>
                      <% @student.errors.full_messages.each do |message| %>
                    <p><%= message  %></p>
                      <% end %>
                    <% end %>  

                    <p></p>
                    <%= form_with(model: @student) do |form| %>
                    <div class="col-md-12">
                        <%= form.label :username, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :username, class: "form-control" %>
                      </div>
                      <div class="col-md-12">
                        <%= form.label :email, class: "col-sm-2 col-form-label" %>
                        <%= form.email_field :email, class: "form-control" %>
                      </div>
                     
                      <div class="col-md-12">
                        <%= form.label :password, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :password, class: "form-control" %>
                      </div>
                    <div class="col-md-12">
                        <%= form.submit  class: "btn btn-primary mt-4" %>                  
                      <% end %>  
                        <%= link_to "Login", login_path, class: "btn btn-primary mt-4" %>
                </div>                  
              </div>
            </div>
        </div>
    </div>
</div>
