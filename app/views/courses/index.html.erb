<h1>All the courses </h1>

<table style="color:white">
    <thead>
        <tr>
            <th>
                Name:
            </th>
            <th>
                Number:
            </th>
            <th>
                Professor:
            </th>
            <th>
                Edit:
            </th>

        </tr>
    </thead>
    <tbody>
        <% @courses.each do |course| %>
            <tr>
                <td>
                    <%= course.name %>
                </td>
                <td>
                    <%= course.number %>
                </td>
                <td>
                    <%= course.admin.name if course.admin %>
                </td>

                <td>
                    <%= button_to "Add Course" , "add-courses" , params: {course_id: course.id}, method: :post%>
                </td>

                <td>
                    <%= link_to 'Edit Course' , edit_course_path(course) %>
                </td>
                <td>
                    <%= link_to 'Show Course' , course_path(course) %>
                </td>


            </tr>

            <% end %>
    </tbody>
</table>