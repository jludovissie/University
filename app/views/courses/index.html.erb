
<div class="row row-cols-1 rol-cols-md-3">  
  <% @courses.each do |course| %>
    <div class="col-md-4">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
            <h5 class="card-title"><%= link_to course.name, course_path(course) %> <%= course.number %></h5>
            <p class="card-text"> Course Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= course.description %></li>
        </ul>
        <div class="card-body">
            <a class="card-link" style="color:blue"></a>
            <% if logged_in? %>
            <a><%= button_to "Add Course" , "add-courses" , params: {course_id: course.id}, class: "btn btn-light" %></a>
            <% end %>
            <% if admin_logged_in? %>
            <a><%= link_to "Edit Course", edit_course_path(course), class: "btn btn-light mt-3" %></a>
            <% end %>
        </div>
        </div>
    </div>
    <% end %>        
</div>  
