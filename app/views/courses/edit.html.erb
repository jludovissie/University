
<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Edit Course</h3>
                    <%= form_with(model: @course, url: courses_path ) do |form| %>
                    <div class="col-md-12">
                        <%= form.label :name, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :name, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                      <%= form.label :number, class: "col-sm-2 col-form-label" %>
                      <%= form.text_field :number, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                      <%= form.label :description, class: "col-sm-2 col-form-label" %>
                      <%= form.text_area :description, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                      <%= form.submit  class: "btn btn-primary mt-3" %>                  
                    <% end %>  
                    </div>                  
                  </div>
                </div>
            </div>
        </div>
    </div>
  </div>