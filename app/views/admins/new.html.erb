<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Create your Employee Account!</h3>
                    <p>Welcome to the Paducah Business Family.  Your are molding tomorrows business leaders</p>
                    <% if @admin.errors.any? %>
                    <% @admin.errors.full_messages.each do |message| %>
                  <p><%= message  %></p>
                    <% end %>
                  <% end %>  
                    <%= form_with(model: @admin) do |form| %>
                    <div class="col-md-12">
                        <%= form.label :name, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :name, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= form.label :username, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :username, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= form.label :email, class: "col-sm-2 col-form-label" %>
                        <%= form.email_field :email, class: "form-control" %>
                    </div>
                    <div class="col-md-12">
                        <%= form.label :password, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :password, class: "form-control" %>
                    </div>  
                    <div class="col-md-12">
                        <%= form.label :phone, class: "col-sm-2 col-form-label" %>
                        <%= form.text_field :phone, class: "form-control" %>
                    </div>       
                    <div class="col-md-12">
                        <%= form.submit  class: "btn btn-primary" %>                  
                    <% end %>  
                    </div>    
                </div>
            </div>
        </div>
    </div>
</div>
