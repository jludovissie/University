
<div class="container-fluid">
  <div class="form-body">
    <div class="row">
      <div class="form-holder">
        <div class="form-content">
          <div class="form-items">
            <h3>Login to Student Dashboard</h3> 
                <%= form_with(scope: :session, url: login_path, local: true) do |form| %>
                <div class="col-md-12">
                <%= form.label :email, class: "col-sm-2 col-form-label" %>
                <%= form.email_field :email, class: "form-control" %>
              </div> 
              <div class="col-md-12">
                <%= form.label :password, class: "col-sm-2 col-form-label" %>
                <%= form.text_field :password, class: "form-control" %>
              </div>
              <br>
              <div class="col-md-12">
                <%= form.submit "Login", class: "btn btn-primary" %>
                <% end %>  
                <%= link_to "Apply Today", apply_path , class: "btn btn-primary" %>
              </div>                     
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>  